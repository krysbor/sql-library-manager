extends layout

block content
    h1 Books
    p
        a(class="button" href="#") Create New Book
    table
        thead
            tr
                th Title
                th Author
                th Genre
                th Year
        tbody
            each book in books
                book
                tr
                    td
                        a(href="#") #{book.title}
                    td= book.author
                    td= book.genre
                    td= book.year
